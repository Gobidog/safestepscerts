# Streamlit Secrets Configuration
# Copy this to .streamlit/secrets.toml and fill in your values
# DO NOT commit secrets.toml to version control!

# JWT Secret for session management (generate a strong random key)
JWT_SECRET = "your-very-secure-jwt-secret-key-here"

# Authentication passwords (optional - uses defaults if not provided)
USER_PASSWORD = "your_user_password_here"
ADMIN_PASSWORD = "your_admin_password_here"

# Google Cloud Storage (optional for cloud deployment)
[gcp]
BUCKET_NAME = "your-bucket-name"
PROJECT_ID = "your-project-id"

# If using service account authentication, add the JSON key here
# SERVICE_ACCOUNT_KEY = '''
# {
#   "type": "service_account",
#   "project_id": "your-project",
#   "private_key_id": "key-id",
#   "private_key": "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n",
#   ...
# }
# '''